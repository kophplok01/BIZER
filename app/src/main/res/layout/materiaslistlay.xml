<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/transparent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/transparent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
       >
        <LinearLayout
            android:id="@+id/largo"
            android:layout_marginVertical="10dp"
           android:layout_marginLeft="15dp"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/list_gradient_style"
            android:gravity="center"
            >

            <TextView
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:textColor="#fff"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textStyle="bold"
                android:paddingTop="8dp"
                android:paddingBottom="6dp"
                android:id="@+id/horadeinicio"
                android:text="1"/>


            <View
                android:id="@+id/pol"
                android:layout_gravity="center"
                android:layout_width="2dp"
                android:layout_height="10dp"
                android:background="#fff"
                />


            <TextView
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:paddingTop="6dp"
                android:textStyle="bold"
                android:id="@+id/horadefinal"
                android:paddingBottom="8dp"
                android:textColor="#fff"
                android:text="3"/>



        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:textColor="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvmateria"
            android:fontFamily="sans-serif-medium"
            android:textSize="16sp"
            android:text="Materia"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/profesorm"
            android:textColor="#fff"
            android:text="Profesor no definido"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                                android:id="@+id/salon"
                android:textSize="12sp"
                android:textColor="#fff"
                android:text="Salon no definido"/>
        </LinearLayout>


    </LinearLayout>




</LinearLayout>