<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Fragments.SettingsFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

    <de.hdodenhof.circleimageview.CircleImageView
        android:visibility="gone"
        android:layout_width="420dp"
        android:layout_height="420dp"
        app:civ_border_width="2dp"
        android:padding="40dp"
        app:civ_border_color="@color/transparent"
        android:src="@color/grad1"
        android:id="@+id/imagen23"/>

    <LinearLayout
        android:id="@+id/aocultar"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="225dp"
            android:layout_height="225dp"
            android:src="@drawable/carnet" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Carnet Electrónico"
            android:textSize="24sp"
            android:textColor="#fff"/>

        <TextView
            android:layout_marginTop="25dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="¡Usa tu carnet electrónico para acceder a diferentes servicios de la Universidad!"
            android:textSize="18sp"
            android:textColor="#fff"/>

        <Button
            android:layout_marginTop="25dp"
            android:id="@+id/princi"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:background="@drawable/list_gradient_style"
            android:text="Mostrar Carnet Electronico"
            />

    </LinearLayout>

    </LinearLayout>

</LinearLayout>