<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="450dp"
            android:background="@drawable/fdss"
            android:orientation="vertical"

            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:src="#7A474747"/>


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_marginHorizontal="15dp"
                android:background="@color/transparent"
                >



                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_preciogrande_24dp" />

                <TextView
                    android:id="@+id/textViewNamees"
                    android:gravity="center_horizontal"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Precios"/>



                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/textViewesc"
                    android:textSize="15sp"
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pago de Contado(Trimestre)" />

                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="#7A3D3D3D"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="135dp"
                        android:gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nuevo Ingreso"
                            android:textSize="15sp"
                            android:textColor="#fff"/>

                        <TextView
                            android:id="@+id/precioconnit"
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2.000.000 BSF"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="#fff"/>




                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="135dp"
                        android:gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Estudiante regular"
                            android:textSize="15sp"
                            android:textColor="#fff"/>

                        <TextView
                            android:id="@+id/precioconert"
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1.500.000 BSF"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="#fff"/>




                    </LinearLayout>

                </LinearLayout>


                <TextView

                    android:textSize="15sp"
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pago por Cuotas(Trimestre)" />

                <LinearLayout

                    android:layout_marginTop="10dp"
                    android:background="#7A3D3D3D"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="135dp"
                        android:gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nuevo Ingreso"
                            android:textSize="15sp"
                            android:textColor="#fff"/>

                        <TextView
                            android:id="@+id/preciocuonit1"
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2.000.000 BSF"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="#fff"/>

                        <TextView
                            android:id="@+id/preciocuonit2"
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2.000.000 BSF"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="#fff"/>

                        <TextView
                            android:layout_marginBottom="3dp"
                            android:id="@+id/preciocuonit3"
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2.000.000 BSF"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="#fff"/>




                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="135dp"
                        android:gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Estudiante regular"
                            android:textSize="15sp"
                            android:textColor="#fff"/>

                        <TextView
                            android:id="@+id/preciocuoert1"
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1.500.000 BSF"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="#fff"/>

                        <TextView
                            android:id="@+id/preciocuoert2"
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1.500.000 BSF"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="#fff"/>

                        <TextView
                            android:id="@+id/preciocuoert3"
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1.500.000 BSF"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="#fff"/>




                    </LinearLayout>

                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="5dp">


                    <Button
                        android:id="@+id/cerrar"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/btn_gradient_style"
                        android:fontFamily="sans-serif-medium"
                        android:text="Cerrar"
                        android:textAllCaps="false"
                        android:textColor="#fff"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ProgressBar
                        android:id="@+id/rec_progress"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:indeterminateTint="@color/colorPrimary"
                        android:indeterminateTintMode="src_atop"
                        app:layout_constraintBottom_toBottomOf="@+id/cerrar"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/cerrar"
                        app:layout_constraintTop_toTopOf="@+id/cerrar" />

                </androidx.constraintlayout.widget.ConstraintLayout>



            </LinearLayout>





        </RelativeLayout>







</RelativeLayout>